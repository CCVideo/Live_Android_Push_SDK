<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@id/id_popup_window_outside_view"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#99333333"
                android:orientation="vertical"
                android:paddingEnd="30dp"
                android:paddingStart="30dp">

    <RelativeLayout
        android:id="@id/id_popup_window_anim_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/popup_anim_bg">

        <TextView
            android:id="@+id/id_choose_dialog_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="16sp"
            android:gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp"/>

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_choose_dialog_tip"
            layout="@layout/common_oper_btn_layout"/>

    </RelativeLayout>

</RelativeLayout>